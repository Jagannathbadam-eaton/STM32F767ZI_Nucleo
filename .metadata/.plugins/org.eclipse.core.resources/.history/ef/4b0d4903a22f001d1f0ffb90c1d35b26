#include "../../../../../../../External/FreeRTOS-Plus/Test/CMock/examples/temp_sensor/src/UsartConductor.h"

#include "../../../../../../../External/FreeRTOS-Plus/Test/CMock/examples/temp_sensor/src/TaskScheduler.h"
#include "../../../../../../../External/FreeRTOS-Plus/Test/CMock/examples/temp_sensor/src/Types.h"
#include "../../../../../../../External/FreeRTOS-Plus/Test/CMock/examples/temp_sensor/src/UsartHardware.h"
#include "../../../../../../../External/FreeRTOS-Plus/Test/CMock/examples/temp_sensor/src/UsartModel.h"

void UsartConductor_Init(void)
{
  UsartHardware_Init(UsartModel_GetBaudRateRegisterSetting());
  UsartHardware_TransmitString(UsartModel_GetWakeupMessage());
}

void UsartConductor_Run(void)
{
  char* temp;
  if (TaskScheduler_DoUsart())
  {
    temp = UsartModel_GetFormattedTemperature();
    UsartHardware_TransmitString(temp);
  }
}
